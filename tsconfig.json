{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "moduleResolution": "bundler",
    "types": ["nativewind/types", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "nativewind.d.ts", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
